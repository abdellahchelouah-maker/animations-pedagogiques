    window.RufflePlayer.config = {
      autoplay: "on",
      unmuteOverlay: "hidden"
    };
  </script>
  <script src="../../js/ruffle/ruffle.js"></script>
</head>

<body>

<header class="site-header">
  <div class="header-left">
    <h1>Jeux éducatifs pour enfants</h1>
    <nav>
      <ul class="main-nav">
        <li><a href="../../index.html">Accueil</a></li>
        <li><a href="../electrotechnique.html">Électrotechnique</a></li>
        <li><a href="../electronique.html">Électronique</a></li>
